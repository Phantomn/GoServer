<Window x:Class="YourApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your App" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="파일">
                <MenuItem Header="설정 불러오기" Click="LoadSettings_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="서버" Click="StartAllServices_Click" Margin="5"/>
                <Label Content="{Binding AllServicesStatus}" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton Content="D2DBS" IsChecked="{Binding IsD2DBSRunning}" Margin="5"/>
                <Label Content="{Binding D2DBSStatus}" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton Content="D2CS" IsChecked="{Binding IsD2CSRunning}" Margin="5"/>
                <Label Content="{Binding D2CSStatus}" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton Content="D2GS" IsChecked="{Binding IsD2GSRunning}" Margin="5"/>
                <Label Content="{Binding D2GSStatus}" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton Content="PVPGN" IsChecked="{Binding IsPVPGNRunning}" Margin="5"/>
                <Label Content="{Binding PVPGNStatus}" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton Content="상점" IsChecked="{Binding IsStoreRunning}" Margin="5"/>
                <Label Content="{Binding StoreStatus}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
